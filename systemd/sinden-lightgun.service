[Unit]
Description=Sinden Lightgun Service

[Service]
Type=simple
ExecStart=/opt/sinden-lightgun/startup-scripts/StartLightgunStart.sh
ExecStop=/opt/sinden-lightgun/startup-scripts/StartLightgunStop.sh
